<Page x:Class="CardsLang.studyLists"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardsLang"
      mc:Ignorable="d" 
      d:DesignHeight="311.89" d:DesignWidth="317.444"
      Title="studyLists">

    <Grid Background="#FFC5C5C5">
        <Label x:Name="labelStudy" FontWeight="SemiBold" Content="Choose subject to study" HorizontalAlignment="Left" Height="36" Margin="10,0,0,0" VerticalAlignment="Top" Width="204"/>
        <ListBox x:Name="listBoxSubjects" HorizontalAlignment="Left" Height="196" Margin="21,41,0,0" VerticalAlignment="Top" Width="91" SelectionChanged="listBoxSubjects_SelectionChanged" BorderBrush="Gray" BorderThickness="3"/>
        <Button x:Name="buttonStartStudy" Content="Study" HorizontalAlignment="Left" Height="27" Margin="135,41,0,0" VerticalAlignment="Top" Width="135" Click="buttonStartStudy_Click"/>
        <Button x:Name="buttonBack" Content="Back" HorizontalAlignment="Left" Height="27" Margin="135,210,0,0" VerticalAlignment="Top" Width="135" Click="buttonBack_Click"/>
    </Grid>
</Page>
