<Page x:Class="CardsLang.studyLists"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardsLang"
      mc:Ignorable="d" 
      d:DesignHeight="219.334" d:DesignWidth="218.666"
      Title="studyLists">

    <Grid Background="#FFC5C5C5">
        <Label x:Name="labelStudy" Content="Choose subject to study from the list" HorizontalAlignment="Left" Height="27" Margin="8,9,0,0" VerticalAlignment="Top" Width="204"/>
        <ListBox x:Name="listBoxSubjects" HorizontalAlignment="Left" Height="166" Margin="8,41,0,0" VerticalAlignment="Top" Width="91" SelectionChanged="listBoxSubjects_SelectionChanged" BorderBrush="Gray" BorderThickness="3" />
        <Button x:Name="buttonStartStudy" Content="Study" HorizontalAlignment="Left" Height="23" Margin="128,145,0,0" VerticalAlignment="Top" Width="59" Click="buttonStartStudy_Click"/>
        <Button x:Name="buttonBack" Content="Back" HorizontalAlignment="Left" Height="24" Margin="128,183,0,0" VerticalAlignment="Top" Width="59" Click="buttonBack_Click"/>
    </Grid>
</Page>
