<Page x:Class="CardsLang.studyLists"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardsLang"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="studyLists">

    <Grid Background="#FFC5C5C5">
        <Label x:Name="labelStudy" Content="Choose subject to study from the list" HorizontalAlignment="Left" Height="27" Margin="61,34,0,0" VerticalAlignment="Top" Width="198"/>
        <ListBox x:Name="listBoxSubjects" HorizontalAlignment="Left" Height="166" Margin="61,89,0,0" VerticalAlignment="Top" Width="99" SelectionChanged="listBoxSubjects_SelectionChanged"/>
        <Button x:Name="buttonStartStudy" Content="Study" HorizontalAlignment="Left" Height="46" Margin="195,209,0,0" VerticalAlignment="Top" Width="64" Click="buttonStartStudy_Click"/>
        <Button x:Name="buttonBack" Content="Back" HorizontalAlignment="Left" Height="51" Margin="10,10,0,0" VerticalAlignment="Top" Width="46" Click="buttonBack_Click"/>
    </Grid>
</Page>
