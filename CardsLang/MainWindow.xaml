<Window x:Class="CardsLang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardsLang"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Offset="0" Color="Silver"/>
                    <GradientStop Offset="1" Color="Gray"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Button x:Name="Start" Content="Start" Margin="200.024,131.78,200.878,140.268" FontSize="16" Click="Start_Click"/>
            <Button x:Name="buttonStudy" Content="Study" HorizontalAlignment="Left" Height="48" Margin="200,217,0,0" VerticalAlignment="Top" Width="116" Click="buttonStudy_Click"/>

        </Grid>

    </Grid>
</Window>
